{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
      "eqeqeq": "off",
      "no-unused-vars": "error",
      "no-unused-expression": "error",
      "prefer-const": "error",
      "no-console": "warn",
      "no-undef": "error"
    },
    "globals": {
      "process": "readonly"
    }
  }
  